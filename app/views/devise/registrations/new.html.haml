= content_for :wrapper_class, 'mt-10'
%h2.text-center Join BillionairesJet
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'horizontal-form'}) do |f|
  = f.error_notification
  = f.input :email, required: true, autofocus: true
  = f.input :name, required: true
  = f.input :surname, required: true
  = f.input :company_name
  = f.input :organisation
  = f.input :website
  = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
  = f.input :password_confirmation, required: true
  .btn-group{:style => "width: 100%"}
    = link_to  "Login", new_user_session_path, class: "btn btn-default", style: "width: 40%"
    = f.button :submit, "Register", class: "btn btn-success", style: "width: 60%"
