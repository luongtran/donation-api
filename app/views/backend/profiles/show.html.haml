/ row
.row
  .col-md-4.col-xs-12
    .white-box
      .user-bg
        = image_tag 'large/img1.jpg', class: 'img-responsive'
        .overlay-box
          .user-content
            %a{:href => "javascript:void(0)"}
              = image_tag 'users/genu.jpg', class: 'thumb-lg img-circle'
            %h4.text-white= current_user.fullname
            %h5.text-white= current_user.email
  .col-md-8.col-xs-12
    .white-box
      %ul.nav.nav-tabs.tabs.customtab
        %li.tab.active
          %a{"aria-expanded" => "false", "data-toggle" => "tab", :href => "#profile"}
            %span.visible-xs
              %i.fa.fa-user
            %span.hidden-xs Profile
        %li.tab.hide
          %a{"aria-expanded" => "false", "data-toggle" => "tab", :href => "#messages"}
            %span.visible-xs
              %i.fa.fa-envelope-o
            %span.hidden-xs Messages
        %li.tab
          %a{"aria-expanded" => "true", "data-toggle" => "tab", :href => "#settings"}
            %span.visible-xs
              %i.fa.fa-cog
            %span.hidden-xs Settings
      .tab-content
        #profile.tab-pane.active
          .row
            .col-md-3.col-xs-6.b-r
              %strong Full Name
              %br/
              %p.text-muted= current_user.fullname
